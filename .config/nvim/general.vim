""" core
set nocompatible
set updatetime=100
set number relativenumber

""" dirs
set backupdir=~/.vim/backup
set directory=~/.vim/backupf

""" text / tabs
set textwidth   =100
set colorcolumn =100
set tabstop     =4
set softtabstop =4
set shiftwidth  =4
set expandtab

""" indentation
set smartindent

""" search
set incsearch
set ignorecase
set smartcase
set gdefault

""" wrap lines
set wrap
set showbreak=>\ \ \
