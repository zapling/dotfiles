##########
# Keybinds
##########

set $i3lock i3lock --color=48100f

# Dropdown terminals
bindsym $mod+u [instance="dropdown1"] scratchpad show
bindsym $mod+Shift+u [instance="dropdown2"] scratchpad show

# Browser
bindsym $mod+Shift+t exec firefox
bindsym $mod+Shift+n exec firefox -private-window

# File-manager
bindsym $mod+Shift+f exec thunar

# System
bindsym $mod+l exec $i3lock
bindsym $mod+Shift+Delete exec "$i3lock && systemctl suspend" 

# Audio
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

# Brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 20
bindsym XF86MonBrightnessDown exec xbacklight -dec 20

##########
# Semi-default i3 config
##########

floating_modifier $mod

bindsym $mod+Return exec /usr/bin/kitty

# kill focused window
bindsym $mod+Shift+q [con_id="__focused__" instance="^((?!dropdown).)*$"] kill

# start dmenu (a program launcher)
bindsym $mod+d exec "dmenu_run -nf '#BBBBBB' -nb '#222222' -sb '#D94511' -sf '#EEEEEE' -fn 'monospace-10' -p 'dmenu > '"

