#!/bin/zsh

pman__help() {
    echo "Usage: pman <subcommand> [options]\n"
    echo "pman is a simple wrapper script for the pacman package manager\n"
    echo "Subcommands:"
    echo "    list     List available updates"
    echo "    info     Information about installed package"
    echo "    fetch    Update package database"
    echo "    search   Search for a package"
    echo "    install  Install a package"
    echo "    remove   Remove a package"
    echo "    upgrade  Install updates for all packages available"
    echo ""
}

# Info about installed package
pman__info(){
    pacman -Qi $1
}

# List available updates
pman__list(){
    pacman -Qu
}

# Update database
pman__fetch(){
    sudo pacman -Sy
}

# Search for package
pman__search(){
    pacman -Ss $1
}

# Install package
pman__install(){
    sudo pacman -S $1
}

# Remove package
pman__remove(){
    sudo pacman -Rs $1
}

# Upgrade system
pman__upgrade(){
    sudo pacman -Syu
}

cmdname=$1; shift > /dev/null 2>&1
if type "pman__$cmdname" > /dev/null 2>&1; then
    "pman__$cmdname" "$@"
else
    "pman__help"
    exit 1
fi

