#!/bin/zsh

ProgName=$(basename $0)
  
sub_help(){
    echo "Usage: $ProgName <subcommand> [options]\n"
    echo "Subcommands:"
    echo "    list     List available updates"
    echo "    fetch    Update package database"
    echo "    search   Search for a package"
    echo "    install  Install a package"
    echo ""
    echo "For help with each subcommand run:"
    echo "$ProgName <subcommand> -h|--help"
    echo ""
}
  
# List available updates
sub_list(){
    pacman -Qu
}

# Update database
sub_fetch(){
    sudo pacman -Sy
}

# Search for package
sub_search(){
    pacman -Ss $2
}

# Install package
sub_install(){
    sudo pacman -S $2
}
  
subcommand=$1
case $subcommand in
    "" | "-h" | "--help")
        sub_help
        ;;
    *)
        shift
        sub_${subcommand} $@
        if [ $? = 127 ]; then
            echo "Error: '$subcommand' is not a known subcommand." >&2
            echo "       Run '$ProgName --help' for a list of known subcommands." >&2
            exit 1
        fi
        ;;
esac
