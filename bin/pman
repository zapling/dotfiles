#!/bin/zsh
ProgName=$(basename $0)

sub_help(){
    echo "Usage: $ProgName <subcommand> [options]\n"
    echo "pman is a simple wrapper script for the pacman package manager\n"
    echo "Subcommands:"
    echo "    list     List available updates"
    echo "    info     Information about installed package"
    echo "    fetch    Update package database"
    echo "    search   Search for a package"
    echo "    install  Install a package"
    echo "    remove   Remove a package"
    echo "    upgrade  Install updates for all packages available"
    echo ""
}

# Info about installed package
sub_info(){
    pacman -Qi $1
}

# List available updates
sub_list(){
    pacman -Qu
}

# Update database
sub_fetch(){
    sudo pacman -Sy
}

# Search for package
sub_search(){
    pacman -Ss $1
}

# Install package
sub_install(){
    sudo pacman -S $1
}

# Remove package
sub_remove(){
    sudo pacman -Rs $1
}

# Upgrade system
sub_upgrade(){
    sudo pacman -Syu
}

subcommand=$1
case $subcommand in
    "" | "-h" | "--help")
        sub_help
        ;;
    *)
        shift
        sub_${subcommand} $@
        if [ $? = 127 ]; then
            echo "Error: '$subcommand' is not a known subcommand." >&2
            echo "       Run '$ProgName --help' for a list of known subcommands." >&2
            exit 1
        fi
        ;;
esac
